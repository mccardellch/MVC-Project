  <nav><a href="/login"><img id="logo" src="/assets/img/board.jpg" alt="face logo"/></a>
    <div class="navlink"><a href="/search">Search</a></div>
    <div class="navlink"><a href="/add">Add</a></div>
    <div class="navlink"><a href="/navFull">Fullscreen Map</a></div>
    <div class="navlink"><a href="/settings">My Account</a></div>
    <div class="navlink"><a href="/logout">Log out</a></div>
  </nav>
  

  
  <div id='content'>
        <div id='map'></div>
        <div id='controls'>
            
<!--    Search for skate locations -->
            <div id='div_search'>
                <form id='searchForm'>
                    <h3>Search for Skate Locations</h3>
                    <label for='search'>Search Near City :  </label>
                    <input type='text' id='search' name='search'><br/><br/>
                    <button id='searchBtn'>Search Location</button><br />
                </form>
            </div>
            
<!--    Add skate locations to the firebase database-->
            <div id='div_add'>
                <form id='addForm'>
                    <h3>Add A Skate Location</h3>

                    <label for='nameLocation'>Location Name : </label>
                    <input type='text' id='nameLocation' name='nameLocation' required><br/><br/>

                    <label for='typeLocation'>Select a Type : </label>
                    <select id='typeLocation'>
                        <option value='park' selected>Skate Park</option>
                        <option value='shop'>Skate Shop</option>
                        <option value='spot'>Skate Spot</option>
                    </select><br /><br />

                    <label for='descLocation'>Description : </label>
                    <input type='text' id='descLocation' name='descLocation' required><br/><br/>
                    
                    <label>(Longitude, Latitude) :</label>
                    ( <input type='text' id='longitude' class='lnglat' name='longitude' required> ,
                    <input type='text' id='latitude' class='lnglat' name='latitude' required> )
                    <h5><a href='http://geojson.io/#map=2/20.0/0.0' target="_blank">Find Coordinates Here</a></h5><br/>

                    <button id='addBtn'>Submit Location</button><br />
                </form>
            </div>
            
            <h6>* All Fields Required *</h6>
            
<!--    Quick controls -->
            <label>Quick Controls: </label>
            <button id='btn1'>Roc City Skatepark</button>
            <button id='btn2'>Venice Beach Skatepark</button>
            <button id='btn3'>FDR Skatepark</button>
            <button id='btn4'>World @ Zoom 0</button>
        </div>
  </div>
  <div id="domoMessage"><img id="speech" src="/assets/img/speech.png" alt="speech box"/>
    <h3><span id="errorMessage"></span></h3><img id="domo" src="" alt="domo"/>
